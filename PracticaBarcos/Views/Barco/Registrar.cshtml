@model BarcoViewModel
<h1>registrar barco</h1>


<form asp-action="RegistrarBarco" method="post">
    <div class="form-group">
        <label for="nombre">Nombre del Barco</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="antiguedad">Antigüedad (en años)</label>
        <input asp-for="Antiguedad" class="form-control" type="number" />
        <span asp-validation-for="Antiguedad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="tripulacion">Tripulación</label>
        <input asp-for="Tripulacion" class="form-control" type="number" />
        <span asp-validation-for="Tripulacion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Registrar Barco</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}